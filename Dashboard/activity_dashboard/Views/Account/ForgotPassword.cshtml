@model activity_dashboard.Models.ForgotPasswordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <h2>Reset Password</h2>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>

            <div class="auth-links">
                <a asp-controller="Account" asp-action="Login">Back to Login</a>
            </div>
        </form>
    </div>
</body>
</html>