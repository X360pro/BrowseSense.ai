@model activity_dashboard.Models.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <h2>Login</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Log In</button>

            <div class="auth-links">
                <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                <br />
                Don't have an account? <a asp-controller="Account" asp-action="Signup">Sign up</a>
            </div>
        </form>
    </div>
</body>
</html>